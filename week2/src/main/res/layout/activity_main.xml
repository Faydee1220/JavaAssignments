<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    tools:context="com.rq.week2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/inputTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_toStartOf="@+id/textView"
                android:text="@string/input_default_text"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="46sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/total_default_text"
                android:textAlignment="textEnd"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/inputTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#333333"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <ImageButton
                        android:id="@+id/resetButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/reset_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_reset" />

                    <ImageButton
                        android:id="@+id/changeSignButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/change_sign_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_changesign" />

                    <ImageButton
                        android:id="@+id/percentButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/percent_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_percent" />

                    <ImageButton
                        android:id="@+id/divideButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/divide_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/divide_selector" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/number7Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/number_7_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_7" />

                    <ImageButton
                        android:id="@+id/number8Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/number_8_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_8" />

                    <ImageButton
                        android:id="@+id/number9Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/number_9_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_9" />

                    <ImageButton
                        android:id="@+id/timesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/times_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_times" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/number4Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/number_4_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_4" />

                    <ImageButton
                        android:id="@+id/number5Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/number_5_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_5" />

                    <ImageButton
                        android:id="@+id/number6Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/number_6_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_6" />

                    <ImageButton
                        android:id="@+id/minusButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/minus_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_minus" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/number1Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/number_4_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_1" />

                    <ImageButton
                        android:id="@+id/number2Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/number_5_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_2" />

                    <ImageButton
                        android:id="@+id/number3Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/number_6_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_3" />

                    <ImageButton
                        android:id="@+id/plusButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/plus_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_plus" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/number0Button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/number_0_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_0" />

                    <ImageButton
                        android:id="@+id/pointButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/point_image_string_divide_image_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_point" />

                    <ImageButton
                        android:id="@+id/equalsButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/equals_button"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/calculator_equals" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
